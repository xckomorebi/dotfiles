{
    "title": "xc custom key remap",
    "maintainer": "xckomorebi",
    "rules": [
        {
            "description": "remap arrow keys",
            "manipulators": [
                {
                    "from": {
                        "key_code": "b",
                        "modifiers": {
                            "mandatory": [
                                "option"
                            ]
                        }
                    },
                    "to": {
                        "key_code": "left_arrow",
                        "modifiers": [
                            "left_option"
                        ]
                    },
                    "type": "basic",
                    "conditions": [
                        {
                          "type": "frontmost_application_unless",
                          "bundle_identifiers": [
                            "^com.apple.logic10$"
                          ]
                        }
                    ]
                },
                {
                    "from": {
                        "key_code": "f",
                        "modifiers": {
                            "mandatory": [
                                "option"
                            ]
                        }
                    },
                    "to": {
                        "key_code": "right_arrow",
                        "modifiers": [
                            "left_option"
                        ]
                    },
                    "type": "basic",
                    "conditions": [
                        {
                          "type": "frontmost_application_unless",
                          "bundle_identifiers": [
                            "^com.apple.logic10$"
                          ]
                        }
                    ]
                },
                {
                    "from": {
                        "key_code": "n",
                        "modifiers": {
                            "mandatory": [
                                "control"
                            ]
                        }
                    },
                    "to": {
                        "key_code": "down_arrow"
                    },
                    "type": "basic",
                    "conditions": [
                        {
                          "type": "frontmost_application_unless",
                          "bundle_identifiers": [
                            "^com.apple.logic10$"
                          ]
                        }
                    ]
                },
                {
                    "from": {
                        "key_code": "p",
                        "modifiers": {
                            "mandatory": [
                                "control"
                            ]
                        }
                    },
                    "to": {
                        "key_code": "up_arrow"
                    },
                    "type": "basic",
                    "conditions": [
                        {
                          "type": "frontmost_application_unless",
                          "bundle_identifiers": [
                            "^com.apple.logic10$"
                          ]
                        }
                    ]
                }
            ]
        }
    ]
}